@model IEnumerable<OtoServisSatis.Entities.Rol>

<h1 class="text-center">Roller Anasayfası</h1>
<p>
    <a class="btn btn-primary my-3" asp-controller="Role" asp-action="Create">Yeni Rol Eklemek İçin</a>
</p>
<table class="table table-hover table-active">
    <thead>
        <tr class="fs-5">
            <th>Id</th>
            <th>Ad</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Adi</td>
                <td>
                    <a class="btn btn-warning mx-2" asp-controller="Role" asp-action="Edit" asp-route-id="@item.Id">Rol Düzenle</a>
                    <a type="submit" class="btn btn-danger" asp-controller="Role" asp-action="Delete" asp-route-id="@item.Id">Rol Kaldır</a>

                </td>
            </tr>
        }
    </tbody>
</table>