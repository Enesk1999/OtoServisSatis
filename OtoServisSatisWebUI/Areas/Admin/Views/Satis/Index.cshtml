@model IEnumerable<OtoServisSatis.Entities.Satis>

<p>
    <a class="btn btn-primary" asp-action="Create">Yeni Satış İşlemi Ekle</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SatisFiyati)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SatisTarihi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Arac)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Musteri)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SatisFiyati)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SatisTarihi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Arac.Aciklama)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Musteri.Adi)
            </td>
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Satış Bilgilerini Güncelle</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Satış İşlemini Kaldır</a>
            </td>
        </tr>
}
    </tbody>
</table>
