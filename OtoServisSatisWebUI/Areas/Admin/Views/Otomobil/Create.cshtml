@model OtoServisSatis.Entities.Arac

<h4>Arac Ekeleme Sayfası</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Renk" class="control-label"></label>
                <input asp-for="Renk" class="form-control" />
                <span asp-validation-for="Renk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fiyat" class="control-label"></label>
                <input asp-for="Fiyat" class="form-control" />
                <span asp-validation-for="Fiyat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KasaTipi" class="control-label"></label>
                <input asp-for="KasaTipi" class="form-control" />
                <span asp-validation-for="KasaTipi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModelYili" class="control-label"></label>
                <input asp-for="ModelYili" class="form-control" />
                <span asp-validation-for="ModelYili" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="SatistaMi" /> @Html.DisplayNameFor(model => model.SatistaMi)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Anasayfa" /> @Html.DisplayNameFor(model => model.Anasayfa)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Aciklama" class="control-label"></label>
                <input asp-for="Aciklama" class="form-control" />
                <span asp-validation-for="Aciklama" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resim1" class="control-label"></label>
                <input asp-for="Resim1" class="form-control"type="file" />
                <span asp-validation-for="Resim1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resim2" class="control-label"></label>
                <input asp-for="Resim2" class="form-control" type="file" />
                <span asp-validation-for="Resim2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resim3" class="control-label"></label>
                <input asp-for="Resim3" class="form-control" type="file" />
                <span asp-validation-for="Resim3" class="text-danger"></span>
            </div>
            <div class="form-group mb-5">
                <label asp-for="MarkaId" class="control-label"></label>
                <select asp-for="MarkaId" class ="form-select" asp-items="ViewBag.MarkaId"></select>
            </div>
            <div class="form-group mt-5">
                <input type="submit" value="Araç Ekle" class="btn btn-success" />
                <a class="btn btn-primary" asp-action="Index">Araç Listesine Dön</a>
            </div>
        </form>
    </div>
</div>

