@model OtoServisSatis.Entities.Marka

<h4>Marka</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-3">
                <label asp-for="Adi" class="control-label"></label>
                <input asp-for="Adi" class="form-control mt-2" />
                <span asp-validation-for="Adi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-success" type="submit" value="Markayı Güncelle" />
                <a class="btn btn-primary" asp-action="Index">Marka Anasayfasına Geri Dön</a>
            </div>
        </form>
    </div>
</div>

