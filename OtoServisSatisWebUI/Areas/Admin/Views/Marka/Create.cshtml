@model OtoServisSatis.Entities.Marka

<h2>Marka Eklemek İçin</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-4">
                <label asp-for="Adi" class="control-label"></label>
                <input asp-for="Adi" class="form-control" />
                <span asp-validation-for="Adi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-success" type="submit" value="Yeni Marka Ekle" class="btn btn-primary" />
                <a class="btn btn-primary mx-2" asp-action="Index">Marka Listesine Geri Dön</a>
            </div>
        </form>
    </div>
</div>


