@model IEnumerable<Arac>

<h2>Tüm Satıştaki Araçlar</h2>

<div class="px-4 px-lg-5 mt-5">
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col mb-5">
                <div class="card h-100">
                    <!-- Product image-->
                    <img class="card-img-top" src="/Img/Cars/@item.Resim1" alt="..." height="175" />
                    <!-- Product details-->
                    <div class="card-body p-4">
                        <div class="text-center">
                            <!-- Product name-->
                            <h5 class="fw-bolder">@item.Marka.Adi @item.Model</h5>
                            <!-- Product price-->
                        @item.Fiyat <span style="font-size:15px">
                                &#8378;
                            </span>
                           
                        </div>
                    </div>
                    <!-- Product actions-->
                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                        <div class="text-center"><a class="btn btn-outline-dark mt-auto" asp-action="Detay" asp-controller="Home" asp-route-id="@item.Id">Araç Detayları</a></div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>