@model HomeViewModel

<style>
    img {
        object-fit: cover;
    }

    .asp {
        padding: 20px;
        margin-top: 50px;
    }
</style>
<div class="all-content">
    @*Slider Section*@
    <div id="carouselExampleCaptions" class="carousel slide py-2">
        <div class="carousel-inner">
            @foreach (var item in Model.Sliders)
            {
                <div class="carousel-item @(item==Model.Sliders.FirstOrDefault() ? "active" : "")">
                    <img src="/Img/Sliders/@item.Resim" class="d-block w-100" height="450" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Second slide label</h5>
                        <p>Some representative placeholder content for the second slide.</p>
                    </div>
                </div>
            }

        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>

    </div>

    @*Project Name Content*@
    <div class="text-center">
        <h1 class="display-4">Asp.NetCore Mvc Oto Servis-Satış</h1>
    </div>

    <div class="px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var item in Model.Aracs)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Product image-->
                        <img class="card-img-top" src="Img/Cars/@item.Resim1" alt="..." height="175" />
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">@item.Marka.Adi @item.Model</h5>
                                <!-- Product price-->
                            @item.Fiyat <span style="font-size:15px">
                                    &#8378;
                                </span>
                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center"><a class="btn btn-outline-dark mt-auto" asp-action="Detay" asp-controller="Home" asp-route-id="@item.Id">Araç Detayları</a></div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>



</div>

<!--Modal kısmı-->
<partial name="Musteri" model="null"></partial>



